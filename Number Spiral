t = int(input())
for t in range(t):
    y, x = input().split()
    x = int(x)
    y = int(y)
    m = int(max(x, y))
    sq = (m-1) ** 2 # here ** is the power operator => number ** exponent
    if m%2 == 0:
        if x > y:
            print(sq + y)
        else:
            print(m**2 - x + 1)
    else:
        if x > y:
            print(m**2 - y + 1)
        else:
            print(sq + x)
